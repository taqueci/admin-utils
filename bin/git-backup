#!/bin/sh

# Usage: git-backup.sh [BACKUPDIR] [TARGET] ...

topdir=$(cd $(dirname $0)/.. && pwd)

. $topdir/config/admin.cfg || exit 1

week=`date +%w`

if [ $week = "0" ]; then
	subdir=weekly/w`date +%02W`
else
	subdir=daily/d`date +%02d`
fi

if [ -z "$1" ]; then
	backupdir=$GIT_BACKUP_DIR/$subdir
else
	backupdir=$1/$subdir
fi

if [ -z "$2" ]; then
	targets=$GIT_BACKUP_TARGETS
else
	shift
	targets=$@
fi

test -d $backupdir || mkdir -p $backupdir || exit 1

for t in $targets; do
	repos=$backupdir/$GIT_BACKUP_PREFIX`basename $t`

	if [ -d $repos ]; then
		echo "Synchronizing Git repository from $t to $repos"
		(cd $repos && git fetch --all -q)
	else
		echo "Cloning Git repository from $t to $repos"
		git clone --mirror -q $t $repos
	fi
done

echo "Completed!"
